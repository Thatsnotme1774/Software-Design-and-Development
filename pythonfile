#Label3 =Label(root, text="Label 1", bg = "black").grid
#Label2 =Label(root, text="Label 1", bg = "blue").grid()

def hide():
    label1.pack_forget()
def show():
    label1.pack()
def clicked():
    global label1
    label1 = Label(root, text =ent.get())
    label1.pack()
ent = Entry(root, width=300, font=("Verdana, 18"))
ent.pack(pady=20) #creates entry on root and packs it

button1 = Button(root, text="PRESS", command=clicked)
button1.pack()
hide = Button(root, text="HIDE", command=hide).pack()
show = Button(root, text="SHOW", command=show).pack()








root.mainloop() #runs the program, it is a loop and has to be on the bottom
