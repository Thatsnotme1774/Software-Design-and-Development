import tkinter as tk
import customtkinter as ctk
#the main application window

root = tk.Tk()


#variables

geo = "300x300"
canvaswidth = 300
canvasheight = 300
canvascolor ="black"
labelback = "white"
startnumsize = 12
startnumx = 3
startnumy = 1
startnumtx = 130
startnumty = 5
numOftermsize = 11
numOFtermx = 3
numOFtermy = 30
numofsumtx = 130
numofsumty = 30
progressionnumsize = 16
progressionnumx = 3
progressionnumy = 58
progressionnumtx=130
progressionnumty =70
APy = 100
APx= 5
APsize = 8
GPy = 100
GPx = 150
GPsize = 8



#Fucntions
def Arithmetic():
    global final
    final = 0
    global ans
    ans.place_forget()
    tempnum = 1
    global APlist
    APlist = []
    first = StartingnumTxt.get()
    prog = Progressionnumtxt.get()
    while tempnum <= int(NumoftermsTxt.get()):
        final = first + (tempnum - 1)*prog
        tempnum =+ 1
        APlist.insert(int(final))
    print(APlist)

def destroy():
    root.destroy()
def switch():
    pass
def switch2():
    pass
def calulator():
    root.title("AP and GP calculator")
    root.geometry(geo)
  


    #Canvas
    Background = tk.Canvas(root, width=canvaswidth, height=canvasheight, bg=canvascolor)
    Background.pack()

    global ans
    #creating answer label beforehand so that the add/substract/multiplication/division function can delete it.
    ans = tk.Label(root, text="NO OUTPUT YET", font=("aerial, 15"), width= 40, height=8)
    ans.place(x=1, y=130)


    #Menu
    menubar = tk.Menu(root)
    root.config(menu=menubar)

        #Adding a file button
    file_menu = tk.Menu(menubar, tearoff=0)
    menubar.add_cascade(label='File', menu=file_menu)

        #Adding 
    file_menu.add_command(label='Switch Theme Yellow', command=switch)
    file_menu.add_command(label='Switch Theme Dark', command=switch2)
    file_menu.add_command(label='Exit', command=destroy)
    
    #Labels
        #Starting number

    Startingnum = tk.Label(root, text=("Starting Number"), font=("Arial", startnumsize), bg=labelback)
    Startingnum.place(x=startnumx, y=startnumy)

        #Number of Terms

    Numofterms = tk.Label(root, text=("Number of Terms"), font=("Arial(", numOftermsize), bg=labelback)
    Numofterms.place(x=numOFtermx, y=numOFtermy)
    
        #Progression Number
    Progressionnum =tk.Label(root, text=("Increment"), font=("Arial(", progressionnumsize), bg=labelback)
    Progressionnum.place(x=progressionnumx, y=progressionnumy)
    #TextBOx
        #Text box

    global StartingnumTxt
    StartingnumTxt = tk.Entry(root)
    StartingnumTxt.place(x=startnumtx, y=startnumty)

    global NumoftermsTxt
    NumoftermsTxt = tk.Entry(root)
    NumoftermsTxt.place(x=numofsumtx, y=numofsumty)

    global Progressionnumtxt
    Progressionnumtxt = tk.Entry(root)
    Progressionnumtxt.place(x=progressionnumtx, y=progressionnumty)


    #Radiobuttons
    
    AP = tk.Radiobutton(root, text="Arithmetic Progression", command=Arithmetic, value=1, font=("Arial", APsize))
    AP.place(x=APx, y=APy)
    GP = tk.Radiobutton(root, text="Geometric Progression", command=Arithmetic, value=2, font=("Arial", GPsize))
    GP.place(x=GPx, y=GPy)
    
    
    
    root.mainloop()

    







calulator()
